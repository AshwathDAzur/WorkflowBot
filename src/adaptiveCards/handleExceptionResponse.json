{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.5",
    "body": [
      {
        "speak": "",
        "type": "ColumnSet",
        "columns": [
          {
            "type": "Column",
            "width": 2,
            "items": [
              {
                "type": "TextBlock",
                "text": "${name}",
                "weight": "bolder",
                "size": "extraLarge",
                "spacing": "none",
                "wrap": true,
                "style": "heading"
              }
            ]
        }
        ]
      }
    ]
  }
  